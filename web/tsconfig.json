{
    "compilerOptions": {
        "target": "ES2021",
        "useDefineForClassFields": true,
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "~backend/*": ["../backend/src/*"],
            "~insider/*": ["../insider/src/*"],
        },
    },
    "include": ["./src"],
    "exclude": ["../backend/*", "../insider/*"],
    "references": [
        { "path": "./tsconfig.node.json" },
    ]
}